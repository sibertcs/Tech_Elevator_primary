@model RegistrationViewModel
@{
    ViewData["Title"] = "NewUser";
}

<h2>New User Registration</h2>

<form asp-controller="Users" asp-action="NewUserConfirmation" method="post">

    <div>
        <label asp-for="FirstName"></label>
    </div>
    <div>
        <input type="text" asp-for="FirstName" placeholder=" enter first name" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
    </div>
    <div>
        <input type="text" asp-for="LastName" placeholder=" enter last name" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
    </div>
    <div>
        <input asp-for="Email" placeholder=" enter email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="ConfirmEmail"></label>
    </div>
    <div>
        <input asp-for="ConfirmEmail" placeholder=" confirm email address" />
        <span asp-validation-for="ConfirmEmail"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
    </div>
    <div>
        <input asp-for="Password" placeholder=" enter password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword"></label>
    </div>
    <div>
        <input asp-for="ConfirmPassword" placeholder=" confirm password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <label asp-for="BirthDay"></label>
    </div>
    <div>
        <input type="date" asp-for="BirthDay" placeholder=" enter birth date" />
        <span asp-validation-for="BirthDay"></span>
    </div>
    <div>
        <label asp-for="NumberOfTickets"></label>
    </div>
    <div>
        <input asp-for="NumberOfTickets" placeholder=" enter number of tickets" />
        <span asp-validation-for="NumberOfTickets"></span>
    </div>
    <div>
        <input class="submit" type="submit" value="Submit" />
    </div>
</form>