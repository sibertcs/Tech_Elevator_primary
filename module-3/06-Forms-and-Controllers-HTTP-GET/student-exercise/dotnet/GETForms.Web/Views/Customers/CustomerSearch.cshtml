@model CustomerSearch
@{
    ViewData["Title"] = "CustomerSearch";
}


<form asp-controller="Customers" asp-action="CustomerSearchResult" method="get">
    <div>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" />
        <label asp-for="SortType"></label>
        <select asp-for="SortType" asp-items="CustomerSearch.OrderBy"></select>

        <input type="submit" value="Search" />
    </div> 


</form>

